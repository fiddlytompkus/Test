<%- include('partials/header.ejs') %>
<div
  style="
    clip-path: polygon(0 0, 100% 0, 100% 65%, 0 84%);
    background-color: orange;
    width: 100%;
    height: 600px;
    z-index: -1;
  "
>
  <div class="container" style="margin: auto">
    <div class="row">
      <h1 style="text-align: center; margin: 50px auto">Login</h1>
    </div>
    <div style="width: 30%; margin: auto; text-align: center">
      <form action="/login" method="POST">
        <div class="form-group" style="padding: 8px">
          <label for="uname" class="visually-hidden">Email or Username</label>
          <input
            class="form-control"
            type="text"
            name="username"
            id="uname"
            placeholder="Email or Username"
            required
            autofocus
          />
        </div>
        <div class="form-group" style="padding: 8px">
          <label for="pswd" class="visually-hidden">Password</label>
          <input
            class="form-control"
            type="password"
            name="password"
            id="pswd"
            placeholder="Password"
            required
            autofocus
          />
        </div>
        <div class="form-group" style="padding: 8px">
          <button class="btn btn-lg btn-primary btn-block" style="width: 100%">
            Login!
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include('partials/footer.ejs') %>
